function plotCurveDensity(x, Y)
    
    x  = 0:5:100; 
    y  = 1:0.1:30;
    dy = normrnd( ones(21,1000), ones(21,1000));
    Y = cumsum(dy);
    
    figure(10); clf();
    
    subplot(2,2, 1)
    errorbar(x, mean(Y,2), std(Y,[],2))
    
    subplot(2,2, 2)
    h2d = hist(Y', y);
    image(x,y,h2d)
    colormap(1-gray)
    set(gca,'YDir','normal')
end